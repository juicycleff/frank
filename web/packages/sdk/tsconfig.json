{
	"compilerOptions": {
		"target": "es2020",
		"module": "es2020",
		"moduleResolution": "node",
		"declaration": true,
		"declarationDir": "./dist/types",
		"outDir": "./dist/esm",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
      "jsx": "react"
    },
	"include": ["./**/*"],
	"exclude": ["node_modules", "dist", "openapi-ts.config.ts"]
}
