---
import DefaultLayout from './DefaultLayout.astro';
import Header from "../components/astro/Header.astro";
import Logo from "../components/astro/Logo.astro";
import BackgroundPattern from "../components/astro/BackgroundPattern.astro";

const { title, splitLayout = true } = Astro.props;
---

<DefaultLayout title={title}>
    {!splitLayout && (
       <div class="flex flex-col min-h-dvh">
            <Header hideNav="true"/>
            <main class="flex-1 flex bg-background h-full items-center justify-center">
                <div class="container">
                    <div class="max-w-sm mx-auto">
                        <slot/>
                    </div>
                </div>
            </main>
        </div>
    )}
    {splitLayout && (
            <div class="min-h-dvh flex flex-col lg:flex-row">
                {/* Form Side */}
                <div class="flex-1 flex flex-col bg-background">
                    <Header hideNav="true"/>
                    <main class="flex-1 flex items-center justify-center p-4">
                        <div class="w-full max-w-sm mx-auto"><slot/></div>
                    </main>
                    <footer class="py-6 text-center text-sm text-muted-foreground">
                        <p>Â© {new Date().getFullYear()} AuthKit. All rights reserved.</p>
                    </footer>
                </div>

                {/* Visual Side */}
                <div class="hidden lg:flex lg:flex-1 bg-gradient-to-br from-blue-950 to-indigo-900 relative justify-center overflow-hidden">
                    <BackgroundPattern />
                    <div class="absolute inset-0 bg-gradient-to-br from-blue-500/20 to-purple-600/20"></div>
                    <div class="relative flex flex-col justify-center items-center p-12 text-white">
                        <div class="max-w-md text-center space-y-6">
                            <Logo className="h-16 w-16 mx-auto mb-4" />
                            <h1 class="text-4xl font-bold tracking-tight">Welcome to Frank Auth</h1>
                            <p class="text-xl text-blue-100">
                                The world's best login box, with all the features you need for authentication.
                            </p>
                            <div class="pt-8 grid grid-cols-2 gap-4 text-sm">
                                <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
                                    <h3 class="font-medium mb-2">Secure Authentication</h3>
                                    <p class="text-blue-100">Industry-standard security with multiple authentication options</p>
                                </div>
                                <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
                                    <h3 class="font-medium mb-2">Easy Integration</h3>
                                    <p class="text-blue-100">Simple to implement with comprehensive documentation</p>
                                </div>
                                <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
                                    <h3 class="font-medium mb-2">Social Login</h3>
                                    <p class="text-blue-100">Support for all major social providers</p>
                                </div>
                                <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
                                    <h3 class="font-medium mb-2">Two-Factor Auth</h3>
                                    <p class="text-blue-100">Enhanced security with 2FA support</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    )}
</DefaultLayout>
