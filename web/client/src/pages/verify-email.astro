---
import { VerifyEmailForm } from "../components/react/auth/verify-email-form";
import AuthLayout from "../layouts/AuthLayout.astro";
---
<AuthLayout title="Verify Email">
    <div class="space-y-6">
        <div class="space-y-2 text-center">
            <h1 class="text-3xl font-bold">Verify your email</h1>
            <p class="text-muted-foreground">Enter the verification code sent to your email</p>
        </div>
        <VerifyEmailForm client:load />
    </div>
</AuthLayout>